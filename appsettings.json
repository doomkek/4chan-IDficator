{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "System": "Warning",
                "Microsoft.AspNetCore": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "log.txt",
                    "buffered": true,
                    "encoding": "System.Text.Encoding::UTF8",
                    "flushToDiskInterval": "00:00:05"
                }
            }
        ],
        "Enrich": [
            "FromLogContext"
        ]
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://localhost:5000"
            },
            "Https": {
                "Url": "https://localhost:7290"
            }
        },
        "Certificates": {
            "Default": {
                "Path": "<path to .pfx file>"
            }
        }
    },
    "Properties": {
        "Application": "4chan_IDficator"
    },
    "AllowedHosts": "*"
}